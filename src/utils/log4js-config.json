{
  "appenders": {
    "file": {
      "type": "file",
      "filename": "../../logs/server.log",
      "maxLogSize": 10485760,
      "backups": 3,
      "compress": true,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy-MM-dd hh:mm:ss.SSS}] [%p] %c - [Method: %m] %m"
      }
    },
    "console": {
      "type": "console",
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy-MM-dd hh:mm:ss.SSS}] [%p] %c - [Method: %m] %m"
      }
    }
  },
  "categories": {
    "default": {
      "appenders": ["console", "file"],
      "level": "debug"
    }
  }
}
